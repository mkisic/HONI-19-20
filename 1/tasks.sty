  \clearpage
  \pgfkeys{#1}
  \problemname{#2}
  \addtocontents{prl}{
    \protect\problemline
    {\@problemname}
    {\@problemtype}
    {\@timelimit}
    {\@memorylimit}
    {\@problempoints}
  }
  \phantomsection
  \addcontentsline{toc}{subsection}{\@problemname}
  \section*{Task \@problemname}
  \markright{Task \textbf{\@problemname} \\
    \@timelimit\ /\
    \@memorylimit\ /\
      \@problempoints\ points}
